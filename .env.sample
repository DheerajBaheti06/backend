# --- SYSTEM CONFIGURATION ---
PORT=8000
NODE_ENV=development
# Replace '*' with your actual frontend URL in production for security
CORS_ORIGIN=*
FRONTEND_URL=http://localhost:3000

# --- DATABASE ---
# Format: mongodb+srv://<username>:<password>@cluster.mongodb.net/db_name
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/sentinel_iam

# --- AUTHENTICATION SECRETS ---
# Generate using: openssl rand -hex 32
ACCESS_TOKEN_SECRET=your_32_char_hex_here
ACCESS_TOKEN_EXPIRY=15m

REFRESH_TOKEN_SECRET=your_another_32_char_hex_here
REFRESH_TOKEN_EXPIRY=7d

# --- CLOUDINARY STORAGE ---
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# --- EMAIL SERVICE (RESEND) ---
RESEND_API_KEY=re_123456789